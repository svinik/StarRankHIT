<script type="text/javascript" src="~/Scripts/DevScripts/replay.js"></script>
<script type="text/javascript" src="~/Scripts/DevScripts/timeLogger.js"></script>

<script src="~/assets/js/jquery.min.js"></script>
<script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Evaluation</title>
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,700">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic">
    <link rel="stylesheet" href="~/assets/fonts/font-awesome.min.css">
</head>
<body id="page-top" onload="startReplay()">
    <input type="hidden" id="start_time_ratings_id" value="@Session["start_time_ratings"]">
    <input type="hidden" id="decisions_arr_str_id" value="@Session["decisions_arr_str"]">

    <header class="masthead bg-primary text-black">
        <div class="container-xl">
            <h1>Evaluation Task<br></h1>
            <hr class="star-light">
            <h2 class="text-left font-weight-light mb-0">

                <center>
                    Please rate the 12 results below.
                </center>

            </h2>

            <br>

            <center>
                <table border=0 cellpadding=15>
                    @{
                        var index = 1;
                        for (var i = 0; i < 4; i++)
                        {
                            <tr>
                                @for (var j = 0; j < 3; j++)
                                {
                                    <td>
                                        <div class="card mx-auto">
                                            <div class="card-header">
                                                <!--- <div class="text-thin">True:False</div>  -->
                                                @Model[index - 1].T:@Model[index - 1].F
                                            </div>
                                            <center>
                                                <div class="card-body">
                                                    <p class="card-text">How <b>satisfied</b> are you with the @Model[index - 1].T:@Model[index - 1].F information?</p>
                                                    <div class="stars">
                                                        <form action="">
                                                            <input class="star star-5" id="replay-star-@index-5" type="radio" group="replay-star-@index" name="T:@Model[index - 1].T,F:@Model[index - 1].F,index:@index" />
                                                            <label class="star star-5" for="replay-star-@index-5"><br><h5>5</h5></label>
                                                            <input class="star star-4" id="replay-star-@index-4" type="radio" group="replay-star-@index" name="T:@Model[index - 1].T,F:@Model[index - 1].F,index:@index" />
                                                            <label class="star star-4" for="replay-star-@index-4"><br><h5>4</h5></label>
                                                            <input class="star star-3" id="replay-star-@index-3" type="radio" group="replay-star-@index" name="T:@Model[index - 1].T,F:@Model[index - 1].F,index:@index" />
                                                            <label class="star star-3" for="replay-star-@index-3"><br><h5>3</h5></label>
                                                            <input class="star star-2" id="replay-star-@index-2" type="radio" group="replay-star-@index" name="T:@Model[index - 1].T,F:@Model[index - 1].F,index:@index" />
                                                            <label class="star star-2" for="replay-star-@index-2"><br><h5>2</h5></label>
                                                            <input class="star star-1" id="replay-star-@index-1" type="radio" group="replay-star-@index" name="T:@Model[index - 1].T,F:@Model[index - 1].F,index:@index" />
                                                            <label class="star star-1" for="replay-star-@index-1"><br><h5>1</h5></label>
                                                        </form>
                                                    </div>
                                                </div>
                                            </center>
                                        </div>
                                        @{
                                            index++;
                                        }
                                    </td>
                                }
                            </tr>
                        }
                    }
                </table>
            </center>
            <br><br>
        </div>
    </header>
</body>
</html>